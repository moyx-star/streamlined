{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    // "vite.config.*",
    // "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "types": ["node"]
  }
}
